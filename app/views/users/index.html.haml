%h1 Listing users
= form_tag(users_path, :method=>"get", :remote=>true ,:id=>"search_form", :class=>"search")
= text_field_tag :search, @search, :class=>"search_box"
= submit_tag "search", :class=>"search_submit"
%table
  %thead
    %tr
      %th Username
      %th Fname
      %th Lname
      %th Age
      %th Income
      %th Birthday
      %th
      %th
      %th
  %tbody#users
    - @users.each do |user|
      =render user
#paginator
  =paginate @users, :remote=>true

= link_to 'New User', new_user_path
